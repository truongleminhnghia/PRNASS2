@page "{id:int}"
@model UI.Pages.Admins.Categories.ViewDetailModel
@{
    Layout = "_LayoutAdmin";
}

<h2>Category Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Category Name
        </dt>
        <dd class="col-sm-10">
            @Model.Category.CategoryName
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Category.CategoryDescription
        </dd>
        <dt class="col-sm-2">
            Parent Category
        </dt>
        <dd class="col-sm-10">
            @Model.Category.ParentCategoryName
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @(Model.Category.IsActive ? "ACTIVE" : "INACTIVE")
        </dd>
    </dl>
    <a asp-page="Index" class="btn btn-primary">Back to List</a>
</div>