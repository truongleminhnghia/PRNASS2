@page "{id:int}"
@model UI.Pages.Admins.accounts.ViewDetailModel
@{
    Layout = "_LayoutAdmin";
}

<h2>Account Details</h2>

@if (Model.Account != null)
{
    <div class="card">
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Account Name</label>
                    <input asp-for="AccountRequest.AccountName" class="form-control" readonly="@(Model.Edit ? false : true)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="AccountRequest.AccountEmail" class="form-control" readonly="@(Model.Edit ? false : true)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Status</label>
                    <input asp-for="AccountRequest.AccountStatus" class="form-control" readonly="@(Model.Edit ? false : true)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Role</label>
                    <input asp-for="AccountRequest.AccountRole" class="form-control" readonly="@(Model.Edit ? false : true)" />
                </div>

                @if (Model.Edit)
                {
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                }
                else
                {
                    <a asp-page="ViewDetail" asp-route-id="@Model.Account.AccountID" asp-route-edit="true" class="btn btn-warning">Edit</a>
                }

                <a asp-page="Index" class="btn btn-secondary">Back</a>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">Account not found!</div>
}
