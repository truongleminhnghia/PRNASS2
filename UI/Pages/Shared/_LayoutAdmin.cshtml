<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="bg-dark text-white p-3 vh-100" style="width: 250px; position: fixed;">
            <h4 class="text-center">Admin Panel</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-page="/Admins/dashboard">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-page="/Admins/accounts/Index">Accounts</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-page="/Admins/Categories/Index">Categories</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-page="/Admins/NewsArticles/Index">News Articles</a>
                </li>
                <li class="nav-item">
                    <form method="post" asp-page="/Logout">
                        <button class="btn btn-danger w-100 mt-3">🚪 Đăng xuất</button>
                    </form>
                </li>
            </ul>
        </nav>

        <!-- Content -->
        <div class="content flex-grow-1 p-4" style="margin-left: 250px;">
            <h2 class="mb-4">@ViewData["Title"]</h2>
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
